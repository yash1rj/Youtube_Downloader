{
    "name": "Simple Youtube Downloader",
    "description": "Download youtube videos easily",
    "version": "0.1",
    "manifest_version": 2,
    "web_accessible_resources": ["src/background.js"],
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/watch*"],
            "js": ["src/loader.js"],
            "css": ["src/styler.css"]
        }
    ],
    "permissions": [
        "downloads"
    ]
}